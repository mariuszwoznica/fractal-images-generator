<UserControl x:Class="FractalImagesGenerator.UI.Views.StartPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FractalImagesGenerator.UI.Views"
             xmlns:viewmodel="clr-namespace:FractalImagesGenerator.UI.ViewModels"
             mc:Ignorable="d" 
             Height="450" Width="800"
             d:DataContext="{d:DesignInstance Type=viewmodel:StartPageViewModel}">

    <Grid Background="{DynamicResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Text="{Binding Description}" Foreground="{DynamicResource PrimaryForeground}" TextAlignment="Left" FontSize="20" />
    </Grid>
</UserControl>
