<UserControl x:Class="FractalImagesGenerator.UI.Controls.SideBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FractalImagesGenerator.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    
    <Grid Background="DimGray">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="1" BorderBrush="Black" Margin="10">
            <StackPanel Margin="10">
                <Button Margin="0, 10, 0, 10" Height="60" Content="Mandelbrot Set" />
                <Button Margin="0, 10, 0, 10" Height="60" Content="Julia Set"/>
            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>
