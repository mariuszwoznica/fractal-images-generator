<Application x:Class="FractalImagesGenerator.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FractalImagesGenerator.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DefaultStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="PrimaryBackground">#373740</SolidColorBrush>
            <LinearGradientBrush x:Key="PrimaryBackgroundGradient" StartPoint="0, 0" EndPoint="1, 0">
                <GradientStop Offset="0" Color="#33333D" />
                <GradientStop Offset="0.25" Color="#005D57" />
                <GradientStop Offset="0.75" Color="#1EB980" />
                <GradientStop Offset="1" Color="#37EFBA" />
            </LinearGradientBrush>
            <SolidColorBrush x:Key="PrimaryForeground">#CFCFCF</SolidColorBrush>

            <SolidColorBrush x:Key="PrimaryHoverBackground">#005D57</SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryHoverForeground">#FFFFFF</SolidColorBrush>

            <SolidColorBrush x:Key="PrimaryPressedBackground">#37EFBA</SolidColorBrush>

            <SolidColorBrush x:Key="SecondaryBackground">#33333D</SolidColorBrush>

            <SolidColorBrush x:Key="TertiaryBackground">#424250</SolidColorBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
